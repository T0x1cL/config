--[[Based on AntiX conky file]]

conky.config = {
    alignment = 'top_right',
    background = true,
    border_width = 1,
    cpu_avg_samples = 1,
    net_avg_samples = 1,
    
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    
    font = 'Ubuntu Mono:size=10',
    gap_x = 20,
    gap_y = 40,
    minimum_height = 5,
    minimum_width = 5,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_class = 'Conky',
    own_window_argb_visual = true,
    own_window_argb_value = 145,
    --own_window_argb_value: 0=transparent,255=opaque
    own_window_type = 'desktop',
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
    xftalpha = 1.0,
    
    color = "ffffff",
    color4 = "yellow",
    color8 = "78cdff",
    color9 = "5599cc"
}

conky.text = [[
${alignc}${exec lsb_release -sd}
${alignc}${exec uname -sr}
${alignc}${color8}${time %H:%M:%S}
${alignc}${color}${time %a, %d %b %Y}
${alignc}Uptime: $uptime

res:${alignr}${execi 60 xdpyinfo | sed -n -r "s/^\s*dimensions:.*\s([0-9]+x[0-9]+).*/\1/p"}
dpi:${alignr}${execi 60 sed -nr "s/^\s*Xft.dpi:\s*([0-9]+(x[0-9]+)?).*/\1/p" $HOME/.Xresources | grep "[0-9]" || echo 96}
CPU:${alignr}${cpu}%
Freq:${alignr}${freq}
${alignr}${cpugraph cpu0 30,170 5599cc 5599cc}
Disk:${alignr}${diskio}
${alignr}${diskiograph 30,170 5599cc 5599cc}${if_up eth0}
wlan0 up: $alignr ${upspeed wlan0}
${alignr}${upspeedgraph   wlan0 30,170 5599cc 5599cc}
wlan0 down: $alignr ${downspeed wlan0}
${alignr}${color8}Used / Total ${color}
RAM:${alignr}$mem / $memmax
Swap:${alignr}$swap / $swapmax
Disk:${alignr}${fs_used /} / ${fs_size /}

Battery: ${battery_percent}% ${alignr}${color8}${battery_bar 8,70}
]]
